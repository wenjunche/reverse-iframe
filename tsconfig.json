{
    "compilerOptions": {
        "rootDir": ".",
        "target": "es2018",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext",
            "WebWorker"
        ],
        "useUnknownInCatchVariables": false,
        "noImplicitAny": false,
        "sourceMap": true,
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "preserveSymlinks": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "esnext",
        "moduleResolution": "node",
        "isolatedModules": false,
        "noEmit": false,
        "resolveJsonModule": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "outDir": "./dist"
    },
    "include": [
        "src/**/*.ts*"
    ],
    "exclude": [
        ".cache",
        "dist",
        "config",
        "build-scripts",
        "public"
    ]
}
